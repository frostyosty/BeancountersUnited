{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "api/images/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/images/(.+)", "dest": "/api/images/[id].js" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/site.webmanifest", "dest": "/public/site.webmanifest" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}